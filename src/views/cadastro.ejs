<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar abrigos</title>
    <link rel="stylesheet" href="/css/cadastro.css">
    <link rel="shortcut icon" href="img/favicon_helpet.ico" type="image/x-icon">
</head>

<body>
    <%-include('./partials/header')%>
        <main>
            <h2>Cadastro</h2>
            <form action="/login/cadastro" method="POST" enctype="multipart/form-data">
                <div class="divpai">
                    <br></br>

                    <div class="divfilho">
                        <label for="nome">Nome:</label>
                        <input type="text" name="nome" placeholder="">
                        <% if(typeof erros !== 'undefined' && erros.nome ){ %>
                            <b><%= erros["nome"].msg %> </b>
                        <% } %>
                    </div>

                    <div class="divfilho">
                        <label for="sobrenome">Sobrenome:</label>
                        <input type="text" name="sobrenome" placeholder=" " 
                        <% if(usuario){ %>
                        value="<%= usuario.nome %>"
                        <% } %>
                        <% if(typeof erros !== 'undefined' && erros.sobrenome){ %>
                            <b><%= erros["sobrenome"].msg %> </b>
                        <% } %>>
                    </div>

                    <div class="divfilho">
                        <label for="email">Email:</label>
                        <input type="email" name="email" placeholder="  Ex: abrigo@gmail.com">
                        <% if(typeof erros !== 'undefined' && erros.email){ %>
                            <b><%= erros["email"].msg %> </b>
                        <% } %> 
                    </div>         

                    <div class="divfilho">
                        <label for="numero">Telefone:</label>
                        <input type="number" name="fixo" placeholder="  Somente numeros">
                        <% if(typeof erros !== 'undefined' && erros.fixo){ %>
                            <b><%= erros["fixo"].msg %> </b>
                        <% } %>
                    </div>

                    <div class="divfilho">
                        <label for="celular">Celular:</label>
                        <input type="number" name="celular" placeholder="  Somente numeros">
                        <% if(typeof erros !== 'undefined'&& erros.celular){ %>
                            <b><%= erros["celular"].msg %> </b>
                        <% } %>
                    </div>

                    <div class="divfilho">
                        <label for="Nome do abrigo">Nome do abrigo:</label>
                        <input type="text" name="nomeAbrigo" placeholder="">
                        <% if(typeof erros !== 'undefined' && erros.nomeAbrigo){ %>
                            <b><%= erros["nomeAbrigo"].msg %> </b>
                        <% } %>
                    </div>

                    <div class="divfilho">
                        <label for="numero">Contato do abrigo:</label>
                        <input type="number" name="contato" placeholder="">                   
                    </div>

                    <div class="divfilho">
                        <label for="email">Email do abrigo:</label>
                        <input type="email" name="emailAbrigo" placeholder="  Ex: abrigo@gmail.com">
                        <% if(typeof erros !== 'undefined'&& erros.emailAbrigo){ %>
                            <b><%= erros["emailAbrigo"].msg %> </b>
                        <% } %>               
                    </div>

                    <div class="divfilho">
                        <label for="cep">CEP:</label>
                        <input type="number" name="cep" placeholder="Somente numeros">
                        <% if(typeof erros !== 'undefined' && erros.cep){ %>
                            <b><%= erros["cep"].msg %> </b>
                        <% } %>
                    </div>

                    <div class="divfilho">
                        <label for="cidade">Cidade:</label>
                        <input type="text" name="cidade" placeholder="">
                        <% if(typeof erros !== 'undefined' && erros.cidade){ %>
                            <b><%= erros["cidade"].msg %> </b>
                        <% } %>
                    </div>


                    <div class="divfilho">
                        <label for="rua">Rua:</label>
                        <input type="text" name="rua" placeholder="">
                        <% if(typeof erros !== 'undefined' && erros.rua){ %>
                            <b><%= erros["rua"].msg %> </b>
                        <% } %>
                    </div>

                    <div class="divfilho">
                        <label for="bairro">Bairro:</label>
                        <input type="text" name="bairro" placeholder="">
                    </div>

                    <div class="divfilho">
                        <label for="numero">Número:</label>
                        <input type="number" name="numero" placeholder="">
                    </div>

                    <div class="divfilho">
                        <label for="complemento">Complemento:</label>
                        <input type="text" name="complemento" placeholder="">
                    </div>

                    <div class="divfilho">
                        <label for="Instagram">Instagram:</label>
                        <input type="text" name="instagram" placeholder="Link do instagram">
                    </div>


                    <div class="divfilho">
                        <label for="Facebook">Facebook:</label>
                        <input type="text" name="facebook" placeholder="Link do facebook">
                    </div>

                    <div class="divfilho">
                        <label for="Whatsapp">Whatsapp:</label>
                        <input type="text" name="whatsapp" placeholder="">
                    </div>

                    <div class="divfilho">
                        <label for="senha">Senha:</label>
                        <input type="password" name="senha" placeholder="Senha">
                        <% if(typeof erros !== 'undefined' && erros.senha){ %>
                            <b><%= erros["senha"].msg %> </b>
                        <% } %>
                    </div>

                    <div class="divfilho">
                        <label for="senha">Confirme sua senha:</label>
                        <input type="password" name="confirmarSenha" placeholder="">
                        <% if(typeof erros !== 'undefined' && erros.confirmarSenha){ %>
                            <b><%= erros["confirmarSenha"].msg %> </b>
                        <% } %>
                    </div>
                    <div>
                        <label for="sobre">Sobre o abrigo:</label>
                        <textarea name="sobre" id="sobre" cols="10" rows="10"
                            placeholder="Ex: Data de criação do abrigo, estrutura do abrigo..."></textarea>
                    </div>

                    <div class="divfilho">
                        <label for="suafoto">Foto do perfil:</label>
                        <input type="file" name="suafoto" id="suafoto" accept="*/image">
                        <% if(typeof erros !== 'undefined' && erros.suafoto){ %>
                            <b><%= erros["suafoto"].msg %> </b>
                        <% } %>                    
                    </div>
                    <div class="divfilho">
                        <label for="sualogo">Logo abrigo:</label>
                        <input type="file" name="sualogo" id="sualogo" accept="*/image">
                        <% if(typeof erros !== 'undefined' && erros.sualogo){ %>
                            <b><%= erros["sualogo"].msg %> </b>
                        <% } %>
                    </div>

                    <div id="botao">
                        <button id="enviar" type="submit">Enviar!</button>
                    </div>
                </div>
            </form>
        </main>
        <%-include('./partials/footer')%>
</body>

</html>